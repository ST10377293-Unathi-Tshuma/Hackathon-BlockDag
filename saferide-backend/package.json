{
  "name": "saferide-backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:driver-verification\" \"npm run dev:passenger-management\" \"npm run dev:emergency\" \"npm run dev:ride-booking\"",
    "dev:gateway": "nodemon api/server.ts",
    "dev:driver-verification": "nodemon api/services/driverVerificationServer.ts",
    "dev:passenger-management": "nodemon api/services/passengerManagementServer.ts",
    "dev:emergency": "nodemon api/services/emergencyServer.ts",
    "dev:ride-booking": "nodemon api/services/rideBookingServer.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "start:gateway": "node dist/server.js",
    "start:driver-verification": "node dist/services/driverVerificationServer.js",
    "start:passenger-management": "node dist/services/passengerManagementServer.js",
    "start:emergency": "node dist/services/emergencyServer.js",
    "start:ride-booking": "node dist/services/rideBookingServer.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "preview": "vite preview",
    "check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "docker:build": "docker build -t saferide-backend .",
    "docker:run": "docker run -p 3000:3000 saferide-backend",
    "docker:compose": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@supabase/supabase-js": "^2.56.1",
    "@types/compression": "^1.8.1",
    "@types/http-proxy-middleware": "^0.19.3",
    "@types/winston": "^2.4.4",
    "bcryptjs": "^2.4.3",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "http-proxy-middleware": "^3.0.5",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.511.0",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.3.0",
    "socket.io": "^4.7.4",
    "tailwind-merge": "^3.0.2",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@nomicfoundation/hardhat-toolbox": "^6.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/crypto-js": "^4.2.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^1.4.11",
    "@types/node": "^22.10.2",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.7",
    "@vercel/node": "^5.3.6",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "babel-plugin-react-dev-locator": "^1.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "ethers": "^6.15.0",
    "globals": "^15.14.0",
    "hardhat": "^2.26.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.3",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
